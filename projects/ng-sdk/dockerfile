ARG VERSION_NODEJS
ARG VERSION_NODEJS_SUFFIX
ARG VERSION_NG
ARG VERSION_TYPESCRIPT
ARG VERSION_TS_NODE
ARG VERSION_PNPM

FROM node:${VERSION_NODEJS}${VERSION_NODEJS_SUFFIX}
RUN npm i -g pnpm@${VERSION_PNPM} typescript@${VERSION_TYPESCRIPT} ts-node@${VERSION_TS_NODE} @angular/cli@${VERSION_NG}

VOLUME [ "/project" ]
WORKDIR /project
CMD ng serve
